<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.moutamid.myvideoeditor">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyVideoEditor">
        <activity android:name=".SplitAudioActivity"></activity>
        <activity android:name=".AddStickerTextActivity" />
        <activity android:name=".CropActivity" />
        <activity android:name=".AddVideoActivity" />
        <activity android:name=".AddAudioBackgroundActivity" />
        <activity android:name=".VideoSpeedEditorActivity" />
        <activity android:name=".FilePickerStorePathActivity" />
        <activity android:name=".EditingOptionsActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VideoListActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".VideoPlayActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>